extends layout

block content

    p(class="c2")  #{title}
    a.btn.btn-info(href="/welcome") Back to dashboard
    hr
    form(name="db", action="/db", method="post")
      input(type="text", class="form-control", name="name", placeholder="search name")
      div(style="margin: 0 auto; display: table;")
        button(type="submit", class='button', style="float:initial") SEARCH
    hr
    if boo == true
      div.ranks
          table.table
            thead
              tr
                th Firstname
                th Lastname
                th Description
            tbody
              tr.success
                td Peter
                td Doe
                td professional criminal
              tr.danger
                td Peter
                td Moe
                td arms dealer
              tr.info
               td Peter
               td Dooley
               td ISIS

    else
        hr
